<div id="decks" class="container">
    <div class="row">
        <div class="col s12">

            <h1>{{msg}}</h1>

        </div>
    </div>

    <form class="input-field col s6" action="/api/deck" method="POST">
        <input type="text" id="deckname" class="validate">
        <label for="deckname">Deck Name</label>
        <button id="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>


    <div class="row">
        <div class="col s12 deck-container">
            <h3>Decks:</h3>

            <div id="deck-list" class="row cards-fan-container">

                {{#each deck}}
                <div data-id="{{this.id}}" class="col s3 offset-s1 card hoverable">
                    <button class="btn-floating btn-small waves-effect waves-light red right delete">ï½˜</button>

                    <a href="deck/{{this.id}}">{{this.deckName}}</a>

                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12 cards-container">
            <a class="waves-effect waves-light btn" href="/cms">New Post</a>
            <a class="waves-effect waves-light btn" href="/deck">Manage Decks</a>
            <a class="waves-effect btn waves-light" href="/decks">View Decks</a>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/deck.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>